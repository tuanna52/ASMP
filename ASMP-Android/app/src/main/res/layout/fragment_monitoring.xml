<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.monitoring.MonitoringFragment"
    android:columnCount="2"
    android:rowCount="2"
    android:columnOrderPreserved="false"
    android:paddingLeft="14dp"
    android:paddingRight="14dp">

    <androidx.cardview.widget.CardView
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        android:layout_margin="12dp"
        android:layout_height="150dp"
        android:layout_width="140dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="15dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/thermometer"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:id="@+id/temp_warning"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="3dp"
                android:layout_width="18dp"
                android:layout_height="18dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/temperature_value"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="#fa7ba5"
                android:textSize="33sp"
                android:textStyle="bold"
                android:paddingTop="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="Temperature(Â°C)"
                android:textColor="#6F6F6F"
                android:textSize="18sp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        android:layout_margin="12dp"
        android:layout_height="150dp"
        android:layout_width="140dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="15dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/humidity"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:id="@+id/humid_warning"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="3dp"
                android:layout_width="18dp"
                android:layout_height="18dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/humidity_value"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="#21ecec"
                android:textSize="33sp"
                android:textStyle="bold"
                android:paddingTop="16dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="Humidity(%)"
                android:textColor="#6F6F6F"
                android:textSize="18sp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        android:layout_margin="12dp"
        android:layout_height="150dp"
        android:layout_width="140dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/co2"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:id="@+id/co2_warning"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="3dp"
                android:layout_width="18dp"
                android:layout_height="18dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/co2_value"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="#21ec65"
                android:textSize="33sp"
                android:textStyle="bold"
                android:paddingTop="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="CO2(ppm)"
                android:textColor="#6F6F6F"
                android:textSize="18sp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        android:layout_margin="12dp"
        android:layout_height="150dp"
        android:layout_width="140dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/calendar"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="#2f5e53"
                android:textSize="33sp"
                android:textStyle="bold"
                android:paddingTop="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/date"
                android:textColor="#6F6F6F"
                android:textSize="18sp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</GridLayout>